# AlphaPT Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME=AlphaPT
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOGGING__LEVEL=INFO
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Database Settings - PostgreSQL (using nested format with DATABASE__ prefix)
DATABASE__POSTGRES_HOST=localhost
DATABASE__POSTGRES_PORT=5432
DATABASE__POSTGRES_USER=alphapt
DATABASE__POSTGRES_PASSWORD=alphapt_secure_password
DATABASE__POSTGRES_DATABASE=alphapt
DATABASE__POSTGRES_POOL_SIZE=20
DATABASE__POSTGRES_MAX_OVERFLOW=30

# Database Settings - ClickHouse (using nested format with DATABASE__ prefix)
DATABASE__CLICKHOUSE_HOST=localhost
DATABASE__CLICKHOUSE_PORT=8123
DATABASE__CLICKHOUSE_USER=default
DATABASE__CLICKHOUSE_PASSWORD=clickhouse_secure_password
DATABASE__CLICKHOUSE_DATABASE=alphapt

# NATS Settings
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=
NATS_MAX_RECONNECT_ATTEMPTS=10
NATS_RECONNECT_TIME_WAIT=2.0

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=redis_secure_password
REDIS_MAX_CONNECTIONS=10

# Market Feed Settings
MOCK_MARKET_FEED=true                     # Enable mock market feed for development/testing
MOCK_TICK_INTERVAL_MS=1000               # Mock feed tick interval in milliseconds
MOCK_ENABLE_MARKET_HOURS_CHECK=true      # Respect market hours in mock feed

# Trading Engine Settings  
PAPER_TRADING_ENABLED=true               # Enable paper trading engine
ZERODHA_TRADING_ENABLED=false            # Enable Zerodha live trading engine

# Development Controls
JSON_LOGS=false                          # Enable JSON formatted logs
AUTH_SESSION_EXPIRY_HOURS=24            # Extended session expiry for development

# Paper Trading Realism
PAPER_TRANSACTION_COST=0.05              # Transaction cost percentage
PAPER_SLIPPAGE=0.01                      # Market slippage percentage  
PAPER_ENABLE_STOP_LOSS=true              # Enable stop loss simulation
PAPER_STOP_LOSS_PERCENTAGE=2.0           # Default stop loss percentage

# Zerodha API Settings
TRADING__KITE_API_KEY=your-zerodha-kite-api-key
TRADING__KITE_API_SECRET=your-zerodha-kite-api-secret
TRADING__MAX_POSITION_VALUE=100000
TRADING__MAX_DAILY_LOSS=10000
TRADING__PAPER_INITIAL_BALANCE=1000000

# Monitoring Settings
MONITORING__PROMETHEUS_ENABLED=true
MONITORING__PROMETHEUS_PORT=8001
MONITORING__HEALTH_CHECK_ENABLED=true
MONITORING__ALERTING_ENABLED=true

# Logging Settings
MONITORING__LOG_STRUCTURED=true
MONITORING__LOG_JSON_FORMAT=false
MONITORING__LOG_FILE_ENABLED=true
MONITORING__LOG_CONSOLE_ENABLED=true

# Multi-Channel Logging Settings
MONITORING__LOG_MULTI_CHANNEL_ENABLED=true    # Enable separate log files per component
MONITORING__LOG_AUDIT_RETENTION_DAYS=365      # Audit logs retention (compliance)
MONITORING__LOG_PERFORMANCE_RETENTION_DAYS=30 # Performance logs retention
MONITORING__LOG_DATABASE_LEVEL=WARNING        # Reduce SQL query noise
MONITORING__LOG_TRADING_LEVEL=INFO            # Trading operations detail level
MONITORING__LOG_API_LEVEL=INFO                # API operations detail level
MONITORING__LOG_AUTO_CLEANUP_ENABLED=true     # Automatic old log cleanup
MONITORING__LOG_COMPRESSION_ENABLED=true      # Compress old log files
MONITORING__LOG_COMPRESSION_AGE_DAYS=7        # Compress logs older than 7 days
